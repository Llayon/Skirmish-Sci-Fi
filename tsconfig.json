{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases from vite.config.ts */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Types for testing */
    "types": ["react", "react-dom", "vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["."],
  "exclude": [
    "node_modules",
    "dist",
    "bundle-stats.html",
    "battleStore.ts",
    "crewStore.ts",
    "campaignStore.ts",
    "CrewCreator.tsx",
    "PostBattleSequence.tsx",
    "components/JobBoard.tsx",
    "services/battleDomain.ts"
  ]
}
